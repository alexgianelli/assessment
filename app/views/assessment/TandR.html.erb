<div class="col-sm"><h1>Temperature and Rainfall Page</h1></div>
<br>
<div id="container" style="width:100%; height:400px;"></div>
<script type="text/javascript">
$(function () { 
    var myChart = Highcharts.chart('container', {
        chart: {
            type: 'line'
        },
        title: {
            text: 'Temperature and Rainfall'
        },
        xAxis: {
            categories: <%=raw @temperature_timestamps %>
        },
        yAxis: {
            title: {
                text: 'Units'
            }
        },
        series: [{
            name: 'Temperature',
            data: <%=raw @temperature_values %>
        }, {
            name: 'Rainfall',
            data: <%=raw @rainfall_values %>
        }]
    });
});
</script>